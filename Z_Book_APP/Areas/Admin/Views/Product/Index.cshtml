@model List<Product>


<h2 class="text-center py-4">Create Product</h2>
<a asp-action="Create" asp-controller="Product" class="btn btn-primary">Create Product</a>

<table class="table table-striped border">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Book Name</th>
            <th scope="col">ISBN Number</th>
            <th scope="col">Author</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.ISBN</td>
                <td>@item.Author</td>
                <td>@item.Category.Name</td>
                <td>@item.ListPrice</td>
                <td><a asp-action="Create" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-sm btn-warning px-4 me-3">Edit</a>
                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>