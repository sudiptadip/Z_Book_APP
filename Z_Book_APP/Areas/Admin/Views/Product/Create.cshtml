@model Product



@if (Model != null && !string.IsNullOrWhiteSpace(Model.Title))
{
    <h3 class="text-center py-4">Update Product</h3>
}
else
{
    <h3 class="text-center py-4">Create Product</h3>
}

<a asp-action="Index" asp-controller="Product" class="btn btn-primary">Back To Index</a>

<form method="post" enctype="multipart/form-data" >

    <div class="row" >
        <div class="col-10" >
            <input hidden asp-for="ImageUrl" />
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ISBN" class="form-label"></label>
                <input asp-for="ISBN" class="form-control">
                <span class="text-danger" asp-validation-for="ISBN"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Author" class="form-label"></label>
                <input asp-for="Author" class="form-control">
                <span class="text-danger" asp-validation-for="Author"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ListPrice" class="form-label"></label>
                <input asp-for="ListPrice" class="form-control">
                <span class="text-danger" asp-validation-for="ListPrice"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price50" class="form-label"></label>
                <input asp-for="Price50" class="form-control">
                <span class="text-danger" asp-validation-for="Price50"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price100" class="form-label"></label>
                <input asp-for="Price100" class="form-control">
                <span class="text-danger" asp-validation-for="Price100"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Select Category</label>
                <select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.CategoryList">
                    <option selected disabled>Select Category</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label">Image Url</label>
                <input name="file" type="file" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-2" >
            @if (Model != null && !string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid" />
            }
        </div>
    </div>  
</form>

@section Scripts{
    <scripts>
        <partial name="_ValidationScriptsPartial" />
    </scripts>
}