@model List<Category>


<h2 class="text-center py-4">Create Category</h2>
<a asp-action="Create" asp-controller="Category" class="btn btn-primary">Create Category</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td><a asp-action="Create" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-sm btn-warning px-4 me-3">Edit</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>