@using BookApp.Model
@model Category



@if (Model != null && !string.IsNullOrWhiteSpace(Model.Name))
{
    <h3 class="text-center py-4">Update Category</h3>
}
else
{
    <h3 class="text-center py-4">Create Category</h3>
}

<a asp-action="Index" asp-controller="Category" class="btn btn-primary">Back To Index</a>

<form method="post" >
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Category Name</label>
        <input asp-for="Name"  class="form-control" >
        <span class="text-danger" asp-validation-for="Name" ></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="form-label">Display Order</label>
        <input asp-for="DisplayOrder"  class="form-control" >
        <span class="text-danger" asp-validation-for="DisplayOrder"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>




@section Scripts{
    <scripts>
        <partial name="_ValidationScriptsPartial" />
    </scripts>
}